{
  "buildCommand": "",
  "outputDirectory": ".",
  "installCommand": "echo 'No build needed for static site'",
  "framework": null,
  "rewrites": [
    {
      "source": "/auth",
      "destination": "/html/auth.html"
    },
    {
      "source": "/dashboard",
      "destination": "/html/user-dashboard.html"
    },
    {
      "source": "/features",
      "destination": "/html/features.html"
    },
    {
      "source": "/ai-features",
      "destination": "/html/ai-features.html"
    },
    {
      "source": "/about",
      "destination": "/html/about.html"
    },
    {
      "source": "/contact",
      "destination": "/html/contact.html"
    },
    {
      "source": "/blog",
      "destination": "/html/blog.html"
    },
    {
      "source": "/help",
      "destination": "/html/help-center.html"
    },
    {
      "source": "/privacy",
      "destination": "/html/privacy-policy.html"
    },
    {
      "source": "/terms",
      "destination": "/html/terms-of-use.html"
    },
    {
      "source": "/provider-signup",
      "destination": "/html/provider-signup.html"
    },
    {
      "source": "/provider-registration",
      "destination": "/html/provider-registration.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/signin",
      "destination": "/html/auth.html",
      "permanent": true
    },
    {
      "source": "/signup",
      "destination": "/html/auth.html",
      "permanent": true
    },
    {
      "source": "/login",
      "destination": "/html/auth.html",
      "permanent": true
    }
  ]
} 